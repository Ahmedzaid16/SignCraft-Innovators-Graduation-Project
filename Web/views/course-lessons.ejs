<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/css/all.min.css" />
    <link rel="stylesheet" href="/css/framework.css" />
    <link rel="stylesheet" href="/css/course-lessons.css" />
    <link rel="stylesheet" href="/css/progress.css" />
    <link rel="stylesheet" href="/css/master.css" />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <title>Control Courses</title>
  </head>
  <body>
    <!-- Start header -->
    <%- include('./components/header.ejs', { avatarUrl: user.avatarUrl,
    currentPage: "courses" }) %>
    <!-- End Header -->
    <!-- Start courses -->
    <div class="container-course">
      <div class="course-description">
        <div class="title">
          <div class="icon">
            <i class="fa-solid fa-hands"></i>
            <h2 id="course-name">ArESL Course</h2>
          </div>
          <p style="margin-bottom: 0">
            You will learn sign language and practice it well.
          </p>
          <div>
            <div class="time">
              <i class="fa-regular fa-clock"></i>
              <p id="durationCourse"></p>
            </div>
            <div class="limit">
              <div class="rate">
                <span class="one"></span>
                <span class="two"></span>
                <span class="three"></span>
              </div>
              <p style="color: var(--main-color)">Intermediate</p>
            </div>
          </div>
        </div>
        <div class="learn">
          <h2>What did you learn</h2>
          <div class="complete">
            <i class="fa-solid fa-check"></i>
            <p>You will learn sign language.</p>
          </div>
          <div class="complete">
            <i class="fa-solid fa-check"></i>
            <p>Learn to interact with people who are deaf.</p>
          </div>
        </div>
      </div>
      <div class="course-body">
        <div class="logo">
          <i class="fa-regular fa-file-video"></i>
          <h2>Course content</h2>
        </div>
        <div class="coures-content" id="coures-content"></div>
      </div>
    </div>
    <div class="video-display" id="video-display">
      <div class="content">
        <video
          src="/videos/kids-courses/Primary School ArSL/kids_arsl(1).mp4"
          id="video"
          class="screen"
          poster="/images/poster.png"
        ></video>
        <div class="controls">
          <button class="btn" id="play">
            <i class="fa-solid fa-play fa-2x"></i>
          </button>
          <button class="btn" id="stop">
            <i class="fa-solid fa-stop fa-2x"></i>
          </button>
          <input
            type="range"
            id="progress"
            class="progress"
            min="0"
            max="100"
            step="0.1"
            value="0"
          />
          <span class="timestamp" id="timestamp">00:00</span>
          <span class="separator"> / </span>
          <span class="video-duration" id="video-duration">00:00</span>
          <button class="btn volume" id="volume">
            <i class="fa-solid fa-volume-high"></i>
            <input type="range" min="0" max="1" step="0.1" />
          </button>
          <button class="btn full" id="full">
            <i class="fa-solid fa-expand"></i>
          </button>
        </div>
      </div>
    </div>
    <div class="quiz">
      <a href="../views/translate.ejs"></a>
    </div>
    <!-- End courses -->

    <!-- Start Footer -->
    <%- include('./components/footer.ejs') %>
    <!-- End Footer -->

    <script src="/js/courses-lessons.js"></script>
    <script src="/js/logout.js"></script>
    <script src="/js/lang.js"></script>
  </body>
</html>
