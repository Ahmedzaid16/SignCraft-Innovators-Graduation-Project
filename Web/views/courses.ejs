      <div class="courses">
        <div class="head-courses">
          <h3
            data-i18n="arsl_head"
            class="rectangular-animation2"
            id="arsl-head"
          >
            ArSL Courses
          </h3>
        </div>
        <div class="subscribe">
          <form action="">
            <input
              type="text"
              id="myInput"
              onkeyup="search()"
              placeholder="Search for Courses.."
            />
            <input type="submit" value="Search" />
          </form>
        </div>

        <!-- ///////////////////////////// -->
        <!-- <input
          type="text"
          id="myInput"
          onkeyup="search()"
          placeholder="Search for Courses.."
        /> -->
        <div class="div-courses" id="adultCourses">
          <div class="adult-info-content">
            <h4 data-i18n="ADULT_ARSL_COURSES">Adult ArSL Courses</h4>
            <p data-i18n="ADULT_COURSES_DESCRIPTION">
              Embrace the beauty of Arabic Sign Language (ArSL) with our
              individual Online Arabic Sign Language Courses. Whether you're a
              beginner or looking to enhance your skills, each course offers a
              comprehensive and interactive journey led by experienced Arabic
              Sign Language instructors. Dive into a world of expressive
              gestures, vibrant culture, and meaningful communication, as you
              learn to converse fluently in Arabic Sign Language (ArSL), one
              course at a time. Start your signing adventure today!
            </p>
            <div id="adult-courses-videos" class="div-courses-videos">
              <% courses.forEach(course => { %> <% if (course.categories ===
              'adult' || course.categories ==='بالغ') { %>
              <a
                href="/courses/course_info?course=<%= course.id %>"
                class="course"
              >
                <div class="course-content">
                  <div class="course-img">
                    <img src="<%= course.imageUrl %>" alt="course img" />
                    <span
                      ><%= course.lesson %>
                      <span id="span_lesson" data-i18n="LESSONS_COURSES"
                        >Lessons
                      </span>
                    </span>
                  </div>
                  <div class="course-info">
                    <h4><%= course.name %></h4>
                    <p><%= course.description %></p>
                  </div>
                </div>
              </a>
              <% } %> <% }); %>
            </div>
          </div>
        </div>

        <div class="div-courses" id="kidsCourses">
          <div class="kids-info-content">
            <h4 data-i18n="ARSL_COURSES_FOR_KIDS">Kids ArSL Courses</h4>
            <p data-i18n="KIDS_COURSES_DESCRIPTION">
              Discover the joy of learning Arabic Sign Language (ArSL) with our
              engaging Online Arabic Sign Language Courses for kids. Specially
              designed to captivate young minds, each course provides a fun and
              interactive experience led by skilled Arabic Sign Language
              instructors. Watch as your child explores a new world of
              communication, expression, and culture, mastering the art of
              signing in Arabic Sign Language (ArSL) with enthusiasm and ease.
              Start their signing journey today!
            </p>
            <div id="kids-courses-videos" class="div-courses-videos">
              <% courses.forEach(course => { %> <% if (course.categories ===
              'kids' || course.categories ==='اطفال') { %>
              <a
                href="/courses/course_info?course=<%= course.id %>"
                class="course"
              >
                <div class="course-content">
                  <div class="course-img">
                    <img src="<%= course.imageUrl %>" alt="course img" />
                    <span
                      ><%= course.lesson %>
                      <span id="span_lesson" data-i18n="LESSONS_COURSES"
                        >Lessons</span
                      >
                    </span>
                  </div>
                  <div class="course-info">
                    <h4><%= course.name %></h4>
                    <p><%= course.description %></p>
                  </div>
                </div>
              </a>
              <% } %> <% }); %>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End COURSES -->

    <div class="chatbot-ready" id="chat-ready">
      <div class="chatbot-close" id="close">
        <button>
          <span id="close_mess" data-i18n="Close">Close</span>
          <i class="fa-solid fa-xmark"></i>
        </button>
      </div>
      <div class="chatbot-message" id="chatbot-message">
        <p class="one" id="help" data-i18n="HELP_SUPPORT">Help & Support</p>
        <p class="two" id="hello_service">
          <span id="hello1" data-i18n="HELLO_MESSAGE_1">Hello</span>, <br />
          <span id="hello2" data-i18n="HELLO_MESSAGE_2"
            >We're at your service, click here to start the conversation now!
          </span>
        </p>
      </div>
      <div class="chatbot-img" id="chatbot-img">
        <img src="images/chatbot.png" alt="chatbot" />
      </div>
    </div>
    <div class="chatbot-start dis" id="chat-start">
      <div class="chat">
        <h4 id="chat_robo" data-i18n="CHAT_WITH_ROBO">Chat With Robo</h4>
        <i id="close-chat" class="fa-solid fa-xmark fa-lg"></i>
      </div>
      <div class="messages">
        <div class="new-message" onclick="scrollToBottom()">
          <i class="fa-solid fa-chevron-down"></i>
          <p id="new_mess" data-i18n="NEW_MESSAGE">New Message</p>
        </div>
        <div class="message">
          <img src="images/chatbot.png" alt="chatbot" />
          <p id="greetings" data-i18n="ROBO_GREETINGS">
            Greetings. I am Robo, your dedicated personal assistant, ready and
            at your service to provide insightful answers to any inquiries you
            may have.
          </p>
        </div>
        <div class="message">
          <p id="assist" data-i18n="HOW_CAN_I_ASSIST">
            How may I assist you today? Kindly choose from the following options
            to guide me in providing the support you require:
          </p>
        </div>
        <div class="options">
          <button
            id="one"
            onclick="chooseButton('one')"
            data-i18n="CHOOSE_BUTTON_ERROR"
          >
            Error in sign language App
          </button>
          <button
            id="two"
            onclick="chooseButton('two')"
            data-i18n="CHOOSE_BUTTON_ACCOUNT"
          >
            Account-related Inquiries
          </button>
          <button
            id="three"
            onclick="chooseButton('three')"
            data-i18n="CHOOSE_BUTTON_EDUCATION"
          >
            Education and Courses
          </button>
          <button
            id="four"
            onclick="chooseButton('four')"
            data-i18n="CHOOSE_BUTTON_OTHER"
          >
            Other
          </button>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/chatbot.js"></script>
    <script src="/js/lang.js"></script>
    <script src="/js/courses.js"></script>
  </body>
</html>
