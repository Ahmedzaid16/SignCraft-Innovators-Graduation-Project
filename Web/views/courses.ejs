      <div class="articles" id="articles">
        <h2 class="main-title">Course Categories</h2>
        <div class="container">
          <div class="box">
            <img src="/images/Women_hand.jpg" alt="" />
            <div class="content">
              <h3 data-i18n="AGES_15">Ages 15+</h3>
              <p data-i18n="ADULT_ARSL_COURSES">Adult Sign Language (ArSL) Courses</p>
            </div>
            <div class="info">
              <a onclick="scrollToElement('adultCourses')" data-i18n="READ_MORE">Read More</a>
              <i class="fas fa-long-arrow-alt-right"></i>
            </div>
          </div>
          <div class="box">
            <img src="/images/الاهتمام.jpeg" alt="" />
            <div class="content">
              <h3 data-i18n="KIDS">Kids</h3>
              <p data-i18n="ARSL_COURSES_FOR_KIDS">Kids Sign Language (ArSL) Courses</p>
            </div>
            <div class="info">
              <a onclick="scrollToElement('kidsCourses')" data-i18n="READ_MORE">Read More</a>
              <i class="fas fa-long-arrow-alt-right"></i>
            </div>
          </div>
        </div>
      </div>
