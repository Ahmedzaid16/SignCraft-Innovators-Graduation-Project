<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="website icon" type="png" href="" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/css/all.min.css" />
    <link rel="stylesheet" href="/css/framework.css" />
    <link rel="stylesheet" href="/css/master.css" />
    <link rel="stylesheet" href="/css/reset.css" />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <style>
      .form-control input {
        color: #000;
      }
    </style>
    <title data-i18n="FORGOT_PASSWORD_TITLE">Forgot Password</title>
  </head>

  <body>
    <!-- ///////////////////// Script in the Header Components ////////////////////////// -->
    <div class="scroller"></div>
    <!-- /////////////////////////////////////////////// -->
    <!-- Start header -->
    <%- include('./components/header.ejs', {avatarUrl: null, currentPage: null})
    %>
    <!-- End Header -->
    <!-- start Reset Password -->
    <canvas id="canvas"></canvas>
    <div class="main">
      <form
        action="/reset"
        method="post"
        enctype="multipart/form-data"
        class="cardReset"
        id="resetForm"
      >
        <p class="lock-icon"><i class="fa-solid fa-lock"></i></p>
        <h2 data-i18n="FORGOT_PASSWORD_TITLE" class="hfor">Forgot Password?</h2>
        <p data-i18n="RESET_PASSWORD_DESCRIPTION" class="prest">
          You can reset your Password here
        </p>
        <div class="form-control">
          <input
            type="email"
            id="email"
            name="email"
            autocomplete="email"
            class="passInput"
            placeholder="Email"
            data-i18n="EMAIL"
          />
          <small data-i18n="ERROR_MESSAGE">Error message</small>
        </div>
        <button
          id="send"
          type="submit"
          class="send-email"
          data-i18n="SEND_EMAIL"
        >
          Send Email
        </button>
      </form>
    </div>
    <!-- End Reset Password -->
    <!-- Start Footer -->
    <%- include('./components/footer.ejs') %>
    <!-- End Footer -->
    <script src="/js/animate.js"></script>
    <script src="/js/reset.js"></script>
    <script src="/js/lang.js"></script>
  </body>
</html>