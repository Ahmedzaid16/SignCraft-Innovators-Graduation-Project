  <body>
    <!-- Start Header -->
    <%- include('./components/header.ejs' , {currentPage:null}) %>
    <!-- End Header -->
    <!-- start Reset Password -->
    <canvas id="canvas"></canvas>
    <div class="main">
      <div class="card">
        <p class="lock-icon"><i class="fa-solid fa-lock"></i></p>
        <h2 class="hfor">Forgot Password?</h2>
        <p class="prest">You can reset your Password here</p>
        <input
          type="email"
          id="email"
          class="passInput"
          placeholder="Email address"
        />
        <button id="send" class="send-email">Send Email</button>
      </div>
    </div>
    <!-- End Reset Password -->
    <!-- Start Footer -->
    <%- include('./components/footer.ejs') %>
    <!-- End Footer -->
    <script src="./js/reset.js"></script>
