<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="website icon" type="png" href="" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/css/all.min.css" />
    <link rel="stylesheet" href="/css/framework.css" />
    <link rel="stylesheet" href="/css/master.css" />
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <title>Sign Language</title>
  </head>

  <body>
    <!-- Start header -->
    <%- include('./components/header.ejs', { avatarUrl: null, currentPage: null
    }) %>
    <!-- End Header -->

    <!-- Start Home -->
    <div class="signUp">
      <div class="containerU">
        <div class="intro">
          <h1 class="c-white">Welcome Back!</h1>
          <p class="fw-bold c-white">
            To keep connected with us please login with your personal info
          </p>
          <a href="/signIn"><button class="dif mt-20">SIGN IN</button></a>
        </div>
        <div class="content">
          <form
            action="/signUp"
            id="signupForm"
            method="post"
            enctype="multipart/form-data"
          >
            <h1 class="fw-bold mb-30">Create Account</h1>
            <div class="text">
              <div class="form-control">
                <input
                  name="username"
                  type="text"
                  id="username"
                  autocomplete="username"
                  placeholder="Enter username"
                />
                <small>Error username</small>
              </div>
              <div class="form-control">
                <input
                  name="email"
                  autocomplete="email"
                  type="text"
                  id="email"
                  placeholder="Enter email"
                />
                <small>Error message</small>
              </div>
              <div class="form-control">
                <input
                  name="password"
                  type="password"
                  id="password"
                  placeholder="Enter password"
                />
                <small>Error message</small>
              </div>
              <div class="form-control">
                <input
                  name="password_repet"
                  type="password"
                  id="password2"
                  placeholder="Enter password"
                />
                <small>Error message</small>
              </div>
              <div class="gender d-flex">
                <input
                  class="mr-10"
                  type="radio"
                  name="gender"
                  value="male"
                  id="Male"
                />
                <label class="mr-30" for="Male">Male</label>
                <input
                  class="mr-10"
                  type="radio"
                  name="gender"
                  value="female"
                  id="female"
                />
                <label for="female">female</label>
              </div>
              <div class="d-flex mt-15">
                <label class="mr-5" for="language"
                  >Sign Language Speaker?</label
                >
                <input
                  class="p-15"
                  type="checkbox"
                  id="language"
                  name="isSignLanguageSpeaker"
                />
              </div>
              <button class="mt-20" type="submit">SIGN UP</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- End Home -->
    <script src="/js/signUp.js"></script>
  </body>
</html>
